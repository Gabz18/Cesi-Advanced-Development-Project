<Window x:Class="Client.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Decryptor Launcher" Height="450" Width="800" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    
    
    
    <Grid Background="AliceBlue">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="235, 100,0,0"><Run Text="Username"/></TextBlock>
                <TextBox Margin="9,100,0,0" Width="240" x:Name="username"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Margin="237,0,0,20"><Run Text="Password"/></TextBlock>
                <TextBox Margin="10,0,0,20" Width="240" x:Name="password"/>
            </StackPanel>
            <Button Click="Button_Click" Margin="310,0,276,0" Content="Button"/>
        </StackPanel>
    </Grid>
</Window>
